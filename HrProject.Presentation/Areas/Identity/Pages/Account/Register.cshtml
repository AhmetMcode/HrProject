@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Et";
    Layout = null;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h2 class="h5 mb-4 text-center">Yeni bir hesap oluşturun</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">E-posta Adresi</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" placeholder="İsim" />
                            <label asp-for="Input.Name">İsim</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.SurName" class="form-control" autocomplete="username" aria-required="true" placeholder="Soyisim" />
                            <label asp-for="Input.SurName">Soyisim</label>
                            <span asp-validation-for="Input.SurName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre" />
                            <label asp-for="Input.Password">Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre Tekrarı" />
                            <label asp-for="Input.ConfirmPassword">Şifre Tekrarı</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            @Html.DropDownListFor(m => m.Input.Role, Model.Input.RoleList, "Rol Seç", new { @class = "form-select" })
                        </div>
                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
