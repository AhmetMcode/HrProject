@model IEnumerable<HrProject.Domain.Entities.PersonPosition>

<div class="container mt-4">
    <h2>Mevcut Pozisyon Türleri</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Pozisyon Adı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var position in Model)
            {
                <tr>
                    <td>@position.Name</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Yeni Pozisyon Ekle</h2>
    <div class="row">
        <div class="col-md-6">
            @Html.Partial("AddPersonPosition", new HrProject.Domain.Entities.PersonPosition())
        </div>
    </div>
</div>