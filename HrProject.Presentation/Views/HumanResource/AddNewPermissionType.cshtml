@model HrProject.Presentation.ViewModels.PermissionViewModel

@using (Html.BeginForm("AddNewPermissionType", "HumanResource", FormMethod.Post, new { @class = "mt-4" }))
{
    <div class="form-group">
        <label for="NewPermissionType.Name">İzin Adı:</label>
        <input asp-for="NewPermissionType.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="NewPermissionType.NumberOfDays">Gün Sayısı:</label>
        <input asp-for="NewPermissionType.NumberOfDays" class="form-control" required />
    </div>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="NewPermissionType.IsPaid" class="form-check-input" type="checkbox" id="IsPaid" />
            <label class="form-check-label" for="IsPaid">Ücretli mi?</label>
        </div>
    </div>
    <button type="submit" onclick="kontrolEt()" class="btn btn-success px-4">
        <i class="fas fa-save" style="font-size:20px"></i>
    </button>
}
