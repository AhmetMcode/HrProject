@model IEnumerable<HrProject.Domain.Entities.Workplace>

<div class="card">
    <div class="card-body">
        <h2>Personel Çalışma Yerleri</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Çalışma Yeri Adı</th>
                    <th>Detay</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var workPlace in Model)
                {
                    <tr>
                        <td>@workPlace.Name</td>
                        <td>
                            <a asp-action="GetPersonByWorkPlace" asp-route-id="@workPlace.Id" class="btn btn-warning"><i class="fas fa-edit"></i>Çalışanları Getir</a>
                        </td>
                        <td>
                            <a asp-action="PaymentList" asp-route-id="@workPlace.Id" class="btn btn-warning"><i class="fas fa-edit"></i>Ödeme Listesi Getir</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json',
                },
                dom: 'Bfrtip',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ]
            });
        });
    </script>

}