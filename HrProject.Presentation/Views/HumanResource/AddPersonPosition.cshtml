@using HrProject.Domain.Entities;
@model PersonPosition

@using (Html.BeginForm("AddPersonPosition", "HumanResource", FormMethod.Post, new { @class = "mt-4" }))
{
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Pozisyon:</label>
        <input asp-for="Name" class="form-control" required/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success px-4"><i class="fas fa-save" style="font-size:20px"></i></button>
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}