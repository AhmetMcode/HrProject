@using HrProject.Domain.Entities;
@using HrProject.Presentation.ViewModels;
@model PersonelDocumentViewModel

<div class="card">
    <div class="card-header">
        <h3>Personel Yetki Tablosu Ekle</h3>
    </div>
    <div class="card-body">
        <form asp-action="AddAuthority" asp-controller="PersonelDocument" method="post">
            
            <div class="form-group">
                <label asp-for="Name" class="control-label my-3">Yetki Adı</label>
                <input asp-for="Name" class="form-control my-3" />
            </div>
           
            <div class="form-group my-3">
                <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i>
                </button>
            </div>
        </form>
    </div>
</div>