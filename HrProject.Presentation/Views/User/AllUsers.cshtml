@using Microsoft.AspNetCore.Identity
@using HrProject.Domain.Entities
@model List<UserViewModel>
@inject UserManager<ApplicationUser> userManager
<style>

    /* Adjust margins */
    .card-body {
        margin-top: 20px;
    }

    /* Add styles for table */
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #343a40;
            color: #fff;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tbody tr:hover {
            background-color: #ddd;
        }
</style>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>


<div class="card">
    <div class="card-body">
        <h2 class="card-title">Kullanıcılar</h2>
        <div class="table-responsive">
            <table id="usersTable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Fotoğraf</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @if (string.IsNullOrEmpty(user.ProfilPhoto))
                                {
                                    <img src="~/ProfilPhoto/profile.png" alt="Profil Fotoğrafı" style="max-width: 100px;" />
                                }
                                else
                                {
                                    <img src="~/ProfilPhoto/@user.ProfilPhoto" alt="Profil Fotoğrafı" style="max-width: 100px;" />
                                }
                            </td>

                            <td>@(user.Name + " " + user.SurName)</td>
                            <td>@user.UserName</td>
                            <td>
                                @foreach (var role in await userManager.GetRolesAsync(user.user))
                                {
                                    @role
                                    <br />
                                }
                            </td>
                            @if (user.SonGirisTarihi == null)
                            {
                                <td>
                                    <div class="alert alert-danger">
                                    Sisteme hiç giriş yapılmadı
                                    </div>
                                </td>
                            }
                            else
                            {
                                <td>@user.SonGirisTarihi</td>
                            }
                            <td><a asp-action="UserDetail" asp-route-id="@user.Id" class="btn btn-success">Detaya Git</a></td>
                            <td>
                                <form method="post" asp-action="Delete">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#usersTable').DataTable();
    });
</script>



